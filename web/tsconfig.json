{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".", // 현재 디렉토리를 기준 경로로 설정,
    "paths": {
      "@custom-components/*": ["src/components/*"], // src/components 폴더를 @components/로 접근
      "@custom-utils/*": ["src/utils/*"], // src/utils 폴더를 @utils/로 접근
      "@custom-types/*": ["src/components/types/*"], // src/utils 폴더를 @utils/로 접근
      "@custom-assets/*": ["src/assets/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": ["src/components/types"]
  },
  "include": [
    "src"
  ]
}
